{
  "name": "eerror",
  "version": "0.0.0-development",
  "description": "An error that can easily combine with additional context data",
  "main": "dist/index.js",
  "repository": "git@github.com:CheerlessCloud/eerror-js.git",
  "author": "CheerlessCloud <nnsceg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "error",
    "errors",
    "extendable error"
  ],
  "scripts": {
    "test": "jest",
    "test:dev": "jest --watch",
    "test:cover": "jest --coverage",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "lint:format": "prettier --write \"src/**/*.js\"",
    "prebuild": "rimraf ./dist",
    "build": "babel src -d ./dist -s --ignore test.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@types/jest": "^26.0.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^29.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.2.3",
    "travis-deploy-once": "^5.0.11"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.0.0"
          },
          "useBuiltIns": false,
          "exclude": [
            "transform-regenerator",
            "transform-async-to-generator"
          ]
        }
      ]
    ]
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "breaking": true,
          "release": "major"
        },
        {
          "revert": true,
          "release": "patch"
        },
        {
          "type": "feat",
          "release": "minor"
        },
        {
          "type": "fix",
          "release": "patch"
        },
        {
          "type": "docs",
          "scope": "/readme/",
          "release": "patch"
        },
        {
          "type": "perf",
          "release": "patch"
        },
        {
          "type": "build",
          "release": "patch"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "files": [
    "dist/**/*.*",
    "!dist/**/*.test.*"
  ]
}
