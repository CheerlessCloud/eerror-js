{
  "name": "eerror",
  "version": "0.0.0-development",
  "description": "An error that can isilly combine with additional data",
  "main": "dist/index.js",
  "repository": "git@github.com:CheerlessCloud/eerror-js.git",
  "author": "CheerlessCloud <nnsceg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "error",
    "errors",
    "extendable error"
  ],
  "scripts": {
    "test": "jest",
    "test:dev": "jest --watch",
    "test:cover": "jest --coverage",
    "report-coverage": "catw coverage/lcov.info | coveralls",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "lint:format": "prettier --write \"src/**/*.js\"",
    "prebuild": "rimraf ./dist",
    "build": "babel src -d ./dist -s --ignore test.js",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@types/jest": "^24.0.11",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "catw": "^1.0.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsdoc": "^4.8.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.3",
    "travis-deploy-once": "^5.0.11"
  },
  "engines": {
    "node": ">=6.10.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.10"
          },
          "useBuiltIns": false,
          "exclude": [
            "transform-regenerator",
            "transform-async-to-generator"
          ]
        }
      ]
    ]
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "feat",
          "release": "minor"
        },
        {
          "type": "fix",
          "release": "patch"
        },
        {
          "type": "docs",
          "scope": "/readme/",
          "release": "patch"
        },
        {
          "type": "perf",
          "release": "patch"
        },
        {
          "type": "build",
          "release": "patch"
        }
      ],
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES"
        ]
      }
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "files": [
    "dist/**/*.*",
    "!dist/**/*.test.*"
  ]
}
