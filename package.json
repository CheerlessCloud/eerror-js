{
  "name": "eerror",
  "version": "0.0.0-development",
  "description": "An error that can isilly combine with additional data",
  "main": "dist/index.js",
  "repository": "git@github.com:CheerlessCloud/eerror-js.git",
  "author": "CheerlessCloud <nnsceg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "error",
    "errors",
    "extendable error"
  ],
  "scripts": {
    "test": "ava",
    "test:dev": "ava --watch",
    "test:debug": "node --inspect --inspect-brk --require babel-register node_modules/ava/profile.js ",
    "test:cover": "nyc ava",
    "posttest:cover": "nyc report --reporter=lcov",
    "report-coverage": "catw coverage/lcov.info | coveralls",
    "lint": "eslint --ext json --ext js ./src",
    "lint:fix": "eslint --ext json --ext js --fix ./src",
    "prebuild": "rimraf ./dist",
    "build": "babel src -d ./dist -s --ignore test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged && npm run test:cover"
  },
  "devDependencies": {
    "@bubltechnology/customizable-commit-analyzer": "^1.0.1",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "catw": "^1.0.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsdoc": "^3.1.3",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^11.0.2"
  },
  "engines": {
    "node": ">=6.10.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint-config-airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": false,
      "codeFrame": false
    },
    "env": {
      "node": true
    },
    "rules": {
      "strict": "error",
      "no-restricted-syntax": "off",
      "jsdoc/check-param-names": 1,
      "jsdoc/check-tag-names": 1,
      "jsdoc/check-types": 1,
      "jsdoc/newline-after-description": 1,
      "jsdoc/require-description-complete-sentence": 1,
      "jsdoc/require-example": 0,
      "jsdoc/require-hyphen-before-param-description": 1,
      "jsdoc/require-param": 1,
      "jsdoc/require-param-description": 1,
      "jsdoc/require-param-type": "error",
      "jsdoc/require-returns-description": 1,
      "jsdoc/require-returns-type": 1
    },
    "plugins": [
      "jsdoc"
    ]
  },
  "babel": {
    "presets": [
      "stage-0",
      [
        "env",
        {
          "targets": {
            "node": "6.10"
          },
          "useBuiltIns": false,
          "exclude": [
            "transform-regenerator",
            "transform-async-to-generator"
          ]
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "src/**/*.test.js",
      "src/**/*.spec.js",
      "test/**/*.js"
    ],
    "source": [
      "src/*"
    ],
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "release": {
    "analyzeCommits": "@bubltechnology/customizable-commit-analyzer"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "commitTypeMap": {
      "feat": "minor",
      "fix": "patch",
      "docs": "null",
      "style": "null",
      "refactor": "patch",
      "perf": "patch",
      "test": "null",
      "build": "patch",
      "ci": "null",
      "chore": "null"
    }
  },
  "lint-staged": {
    "*.{js, json}": [
      "eslint --ext json --ext js --fix",
      "git add"
    ]
  },
  "files": [
    "dist/**/*.*",
    "!dist/**/*.test.*"
  ]
}
